<h1>Edit Product List</h1>

<form action="/product/{{_id}}?_method=PUT" method="POST">
    <input type='text' name="name" placeholder="name" value="{{name}}">
    <input type='number' name="ratio" placeholder="rating" value="{{rating}}">
    <input type='text' name="company" placeholder="company" value="{{company}}">
    <input type='text' name="notes" placeholder="notes" value="{{notes}}">


    <input type="submit" value="Save" />
<a href="/">
    <button>
        Go to HomePage
    </button>
</a>


</form>